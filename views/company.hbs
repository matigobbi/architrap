

<div class="card-company">
{{#with company}}
	<div class="container-inside-company">
	<img class="img-for-build" src="/images/build2.png" alt="picture for" height="150px">
	</div>
	<div class="container-inside-company">
	<p class="name company">{{name}}</p>
	<span class="name">Adress:</span> <p>{{address}}</p>
	<span class="name">City:</span><p> {{city}}</p>
	</div>
	<div class="container-inside-company theother">
	<span class="name">Size :</span><p>{{size}}</p>
	<span class="name">Project Phase :</span><p>{{projectPhase}} </p>
	<span class="name">Project Type :</span><p>{{projectType}} </p>
	</div>
	
{{/with}}
</div>


{{#if company.review}}
<p>Reviews</p>
{{!-- List the reviews --}}
<div class="card2">
	
	{{#each company.review}}
		<div class="container2"> 
			<p>Name: {{name}}</p>
			<p>Years worked on the company:{{yearsWorked}}</p>
			<p>Enviroment: {{enviroment}}</p>
			<p>Salary:{{salary}}</p>
			<p>Avarage overtime per month:{{overtime}}</p>
			<p>Diversity culture:{{diversity}}</p>
			<p>Have the company benefits?: {{benfits}}</p>
			<p>Comment: {{comments}}</p>
			<p>Added by: {{username}}</p>
			<a href="/review/delete/{{_id}}">Delete this review</a>
		</div>

	{{/each}}
	
	</div>
{{else}}
	<h5>No reviews yet, why not adding one?</h5>
{{/if}}

{{#with company}}
<a href="/review/{{_id}}" class="btn btn-danger">write a review</a>
{{/with}}
