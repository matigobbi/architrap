



{{#with company}}

<h1>Company</h1>

<img src="#" alt="picture for " height="200px">
	<h1>Details for {{name}}</h1>
	<h3>Adress: {{address}}</h3>
	<h3>City: {{city}}</h3>
	<p>size :{{size}}</p>
	<p>Project Phase :{{projectPhase}} </p>
	<p>Project Type :{{projectType}} </p>


	
	<p>Reviews: {{Review}}</p>

{{/with}}





<h1>Reviews</h1>
{{!-- List the reviews --}}
{{#if company.review}}
	{{#each company.review}}
		<div>
			<p>{{text}}</p>
			<p>Added by: {{user}}</p>
		</div>
	{{/each}}
{{else}}
	<h5>No reviews yet</h5>
{{/if}}


{{!-- add a review --}}

<form action="/companies/{{company._id}}/reviews" method="POST">
	
	<label>Text: </label>
	<input type="text" name="text">
